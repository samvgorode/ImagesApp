<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="androidx.databinding.ObservableField" />
        <import type="androidx.databinding.ObservableBoolean" />
        <import type="java.util.List" />
        <import type="com.samvgorode.shiftfourimages.presentation.ImageUiModel" />
        <import type="kotlin.Unit" />

        <variable
            name="imagesList"
            type="ObservableField&lt;List&lt;ImageUiModel&gt;&gt;" />

        <variable
            name="goBack"
            type="kotlin.jvm.functions.Function0" />

        <variable
            name="isError"
            type="ObservableBoolean" />

        <variable
            name="isLoading"
            type="ObservableBoolean" />

        <variable
            name="isStub"
            type="ObservableBoolean" />

        <variable
            name="loadMore"
            type="kotlin.jvm.functions.Function1&lt;Integer, Unit&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.list.ImagesListActivity"
        android:focusableInTouchMode="true"
        android:focusable="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{_ -> goBack.invoke() }"
            android:padding="12dp"
            android:src="@drawable/ic_arrow_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="24dp"
            android:paddingBottom="156dp"
            android:visibility="@{imagesList.size() > 0 ? View.VISIBLE : View.GONE}"
            app:images="@{imagesList}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back"
            tools:listitem="@layout/image_widget"
            app:onLoadMoreCallback="@{loadMore}"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/stub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="24dp"
            android:gravity="center"
            android:text="@string/no_images_here"
            android:textColor="@color/white"
            android:textSize="72sp"
            android:visibility="@{(isStub &amp;&amp; !isError) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back"
            tools:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="24dp"
            android:gravity="center"
            android:text="@string/something_went_wrong"
            android:textColor="@color/white"
            android:textSize="72sp"
            android:visibility="@{isError ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back"
            tools:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="28dp"
            android:layout_marginVertical="24dp"
            android:gravity="center"
            android:visibility="@{isLoading ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/back"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>